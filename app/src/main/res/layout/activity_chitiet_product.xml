<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GiaoDien.ChitietProduct">

    <ScrollView
        android:layout_width="match_parent"
        android:background="#ECE9E9"
        android:layout_height="718dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/chitiet_imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/girl" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/back" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="3">
                        <ImageView
                            android:id="@+id/img_chuyen_gh"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="26dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/shoppingcart" />

                        <!--                        <ImageView-->
                        <!--                            android:layout_width="0dp"-->
                        <!--                            android:layout_height="26dp"-->
                        <!--                            android:layout_marginTop="8dp"-->
                        <!--                            android:layout_weight="1"-->
                        <!--                            android:src="@drawable/heart" />-->
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp"
                    android:background="@color/white"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="4dp"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Yêu thích "
                            android:background="#D35151"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/chitiet_tenProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kily.PH Korean Cotton Knitted V Neck Ringer Garter Crop Top Shirt 6A0178"
                        android:textSize="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="3dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="đ"
                            android:textSize="17dp"
                            android:textColor="#cf3067"
                            android:textStyle="bold"
                            android:textDirection="locale"
                            />
                        <TextView
                            android:id="@+id/chitiet_giaProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="39.887"
                            android:textSize="17dp"
                            android:textColor="#cf3067"
                            android:textStyle="bold"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/Ln_danhgia"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/favorite1" />
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/favorite1" />
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/favorite1" />
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/favorite1" />
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/rating" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 4.9"
                                android:textSize="15dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="8dp"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã bán"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:id="@+id/sluongMua"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text=" 0"
                            android:textSize="15dp"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/heartblack" />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/shareblack" />
                    <ImageView
                        android:id="@+id/img_chat"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/messenger" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                android:paddingLeft="15dp"
                >
                <TextView
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết sản phẩm"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Thương hiệu:"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/trademark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thuong hieu sp"
                        android:layout_marginRight="8dp"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Loại sản phẩm:"
                        android:textSize="16dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loai sp"
                        android:id="@+id/namecat"
                        android:textSize="16dp" />
                </LinearLayout>


            </LinearLayout>
            <!--            &#45;&#45;&#45;&#45;-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Mô tả sản phẩm"
                        android:layout_marginBottom="8dp"
                        />

                    <TextView
                        android:id="@+id/chitiet_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Place your Order before 6:00 PM and will be shipped out the following day
✅ Please read the product description before placing order.
✅ Make sure with the variation you choose before checking out.

Delivery Time Period 🚛
3-5 days within NCR (On Average)
5-10 days other Region (On Average)

Return Policy 🔄
▶️ Contact us immediately if the item delivered to you is defective (we have QUALITY CHECKING inside our warehouse)
▶️ Item should be returned within 7 calendar days upon receiving the item.
▶️ Shipping Fee will depend on proper approval of support team.
▶️ Return And Exchange is allowed as long as the item is not yet worn and use."
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#55B159"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        >
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="#2BBCAE"
            android:orientation="vertical"
            android:id="@+id/chat"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/tuvan"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tư vấn"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_add_detail"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="#2BBCAE"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/shoppingcart"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm giỏ hàng"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="#cf3067"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/clickmua"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mua ngay"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
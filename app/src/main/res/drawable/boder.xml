<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color of the LinearLayout -->
            <corners android:radius="10dp" /> <!-- Radius of the rounded corners in dp -->

        </shape>
    </item>
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Border color -->
            <stroke
                android:width="1dp"
                     android:color="#000000" />
        </shape>
    </item>
</layer-list>